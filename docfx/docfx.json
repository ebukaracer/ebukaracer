{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Racer",
      "_appTitle": "Game dev",
      "_appFooter": "&copy; Racer",
      "_appFaviconPath": "images/racer-logo.ico",
      "_appLogoPath": "images/empty.png",
      "_enableSearch": false,
      "pdf": false
    }
  }
}